#!/bin/sh

case "$1" in
start)
        echo -n " Starting <%= @name %> "
        <%= @home %>/bin/plonectl start
        ;;
stop)
        echo -n " Stopping <%= @name %> "
        <%= @home %>/bin/plonectl stop
        ;;
restart)
        echo -n " Restarting <%= @name %> "
        <%= @home %>/bin/plonectl restart
        ;;
status)
        echo -n " <%= @name %> Status "
        <%= @home %>/bin/plonectl status
        ;;
*)
        echo "Usage: `basename $0` {start|stop|restart|status}" >&2
        ;;
esac

exit 0
